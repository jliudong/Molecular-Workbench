 )	x = script("cpk " + i + "%; refresh;")	  end forend functionfunction off2cpkSlow  for ( var i=0; i<101; i = i + 10 )	x = script("cpk " + i + "%; delay 0.1;")	  end forend functionfunction cpk2off  for ( var i=100; i>-1; i = i - 10 )	x = script("cpk " + i + "%; delay 0.1;")	  end forend function